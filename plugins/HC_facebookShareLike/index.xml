<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.1">
  <title xml:lang="en">HC FB Share and Like</title>
  <title xml:lang="zh-TW">HC FB 分享與讚</title>  
  <title xml:lang="zh-CN">HC FB 分享与赞</title>  
  <link>http://blog.hinablue.me</link>  
  <version>1.0</version>
  <description xml:lang="en">Show Facebook Share and Like button in the end of the entry.</description>
  <description xml:lang="zh-TW">在文章顯示 Facebook 的分享與讚的按鈕。</description>
  <description xml:lang="zh-CN">在文章显示Facebook 的分享与赞的按钮。</description>
  <license>GPL</license>
  <author link="http://blog.hinablue.me">Hina, Cain Chen.</author>
  <safety changeData="no" exposeData="no" accessLocal="yes" accessRemote="no" accessRaw="yes" />
  <requirements>
	<textcube>1.8</textcube>
  </requirements>
  <binding>
    <listener event="ViewPostContent">facebookShareLikeButton</listener>
  </binding>
</plugin>
