<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
  <title xml:lang="en">Spacer</title>
  <title xml:lang="ko">빈 줄 표시</title>
  <link>http://needlworks.org/</link>
  <version>1.10.4</version>
  <description xml:lang="en">Insert spacers on sidebar.</description>
  <description xml:lang="ko">사이드바 플러그인 사이의 간격 조절을 위한 빈 줄을 출력해 줍니다.</description>
  <license>GPL</license>
  <author xml:lang="en" link="http://forest.nubimaru.com">Jeongkyu Shin (inureyes / Needlworks)</author>
  <author xml:lang="ko" link="http://forest.nubimaru.com"><![CDATA[신정규 (inureyes / Needlworks)]]></author>
  <safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="no" />
  <requirements>
    <textcube>
        <minVersion>1.10</minVersion>
    </textcube>
  </requirements>
  <binding>
    <sidebar title="Spacer" handler="SB_Spacer"></sidebar>
    <coverpage title="Spacer" handler="SB_Spacer"></coverpage>
	  <config xml:lang="ko" dataValHandler = "SB_Spacer_DataSet">
		  <window width="500" height="525" />
		  <fieldset legend="Spacer">
			  <field title="간격" name="height" type="text" value="20" size="3">
				  <caption><![CDATA[빈 줄 길이를 조절합니다. 단위는 픽셀입니다.]]></caption>
			  </field>			
		  </fieldset>
	  </config>
    <config xml:lang="en" dataValHandler = "SB_Spacer_DataSet">
      <window width="500" height="525" />
      <fieldset legend="Spacer">
        <field title="Space" name="height" type="text" value="20" size="3">
          <caption><![CDATA[Specify a height of the space with 'Pixel'.]]></caption>
        </field>
      </fieldset>
    </config>
  </binding>
</plugin>
