<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
  <title xml:lang="ko">키워드 출력</title>
  <title xml:lang="en">Keyword Interface</title>
  <title xml:lang="zh-TW">關鍵字前端使用者頁面</title>
  <title xml:lang="zh-CN">关键字前端使用者页面</title>
  <link>http://needlworks.org/</link>
  <version>1.0.1</version>
  <description xml:lang="en">This plugin enables keyword feature in Textcube.</description>
  <description xml:lang="ko">텍스트큐브의 키워드 기능을 사용합니다.</description>
  <description xml:lang="zh-TW">啟用關鍵字前端使用者頁面，將關鍵字相關文章顯示於關鍵字項目。</description>
  <description xml:lang="zh-CN">启用关键字前端使用者页面，将关键字相关文章显示于关键字项目。</description>
  <license>GPL</license>
  <author xml:lang="en" link="http://forest.nubimaru.com"><![CDATA[Jeongkyu Shin (inureyes / Needlworks)]]></author>
  <author xml:lang="ko" link="http://forest.nubimaru.com"><![CDATA[신정규 (inureyes / Needlworks)]]></author>
  <author xml:lang="zh-TW" link="http://forest.nubimaru.com"><![CDATA[Jeongkyu Shin (inureyes / Needlworks)]]></author>
  <author xml:lang="zh-CN" link="http://forest.nubimaru.com"><![CDATA[Jeongkyu Shin (inureyes / Needlworks)]]></author>
  <safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="no" />
  <requirements>
    <textcube>1.5</textcube>
  </requirements>
  <binding>
    <listener event="BindKeyword">KeywordUI_bindKeyword</listener>
	<listener event="setKeylogSkin">KeywordUI_setSkin</listener>
	<listener event="ViewTagLists">KeywordUI_bindTag</listener>
	<config xml:lang="ko" dataValHandler="KeywordUI_handleConfig">
       <window width="500" height="525" />
       <fieldset legend="태그 설명 설정">
         <field title="태그 설명" type="checkbox" name="tag">
           <op name="useKeywordAsTag" value="1" checked="checked"><![CDATA[태그 설명에 키워드를 사용합니다]]></op>
         </field>
       </fieldset>
    </config>
    <config xml:lang="zh-TW" dataValHandler="KeywordUI_handleConfig">
       <window width="500" height="525" />
       <fieldset legend="關鍵字說明設定">
         <field title="關鍵字說明" type="checkbox" name="tag">
           <op name="useKeywordAsTag" value="1" checked="checked"><![CDATA[將關鍵字加入標籤說明。]]></op>
         </field>
       </fieldset>
    </config>
    <config xml:lang="zh-CN" dataValHandler="KeywordUI_handleConfig">
       <window width="500" height="525" />
       <fieldset legend="关键词说明设定">
         <field title="关键词说明" type="checkbox" name="tag">
           <op name="useKeywordAsTag" value="1" checked="checked"><![CDATA[将关键词加入标签说明。]]></op>
         </field>
       </fieldset>
    </config>
  </binding>
</plugin>
