<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
  <title xml:lang="en">Referer Log</title>
  <title xml:lang="ko">리퍼러 기록</title>
  <title xml:lang="ja">リファラ統計</title>
  <link>http://needlworks.org/</link>
  <version>1.6</version>
  <description xml:lang="en">Referer log Plugin using Textcube Components.</description>
  <description xml:lang="ko">텍스트큐브 컴포넌트를 이용하여 리퍼러 기록을 보여줍니다.</description>
  <description xml:lang="ja">Textcubeの構成要素を利用して、詳細なリファラ統計を表示します。</description>
  <license>GPL</license>
  <author xml:lang="en" link="http://needlworks.org">Needlworks</author>
  <author xml:lang="ko" link="http://needlworks.org">Needlworks</author>
  <safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="yes" />
  <requirements>
    <textcube>1.5</textcube>
  </requirements>
  <binding>
    <adminMenu>
      <viewMethods>
        <method>
          <topMenu>center</topMenu>
          <contentMenuOrder>3</contentMenuOrder>
          <title xml:lang="en">Referer Log</title>
          <title xml:lang="ko">리퍼러 기록</title>
          <title xml:lang="ja">リファラ統計</title>
          <handler>PN_Referer_Default</handler>
          <params>
            <param>
              <name>page</name>
              <type>int</type>
              <default>1</default>
            </param>
            <param>
              <name>perPage</name>
              <type>int</type>
              <mandatory>0</mandatory>
            </param>
          </params>
        </method>
      </viewMethods>
    </adminMenu>
  </binding>
</plugin>
