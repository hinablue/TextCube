<?xml version="1.0" encoding="utf-8"?>
<plugin version="1.0">
	<title xml:lang="en">TTML Formatter</title>
	<title xml:lang="ko">TTML 포매터</title>
    <title xml:lang="zh-TW">TTML 格式</title>
	<title xml:lang="zh-CN">TTML 格式</title>
	<link>http://needlworks.org/</link>
	<version>1.7</version>
	<description xml:lang="en">Implements TTML formatter, dedicated HTML-like syntax for Textcube.</description>
	<description xml:lang="ko">텍스트큐브 용으로 사용되는 TTML 문법을 구현합니다.</description>
    <description xml:lang="zh-TW">使用並轉換為 TextCube 支援的 TTML 格式。</description>
	<description xml:lang="zh-CN">使用并转换为 TextCube 支持的 TTML 格式。</description>
	<license>GPL</license>
	<author xml:lang="en" link="http://tokigun.net/">Kang Seonghoon (lifthrasiir / Needlworks)</author>
	<author xml:lang="ko" link="http://tokigun.net/"><![CDATA[강 성훈 (lifthrasiir / Needlworks)]]></author>
    <author xml:lang="zh-TW" link="http://tokigun.net/">Kang Seonghoon (lifthrasiir / Needlworks)</author>
    <author xml:lang="zh-CN" link="http://tokigun.net/">Kang Seonghoon (lifthrasiir / Needlworks)</author>
	<safety changeData="no" exposeData="no" accessLocal="no" accessRemote="no" accessRaw="no" />
	<requirements>
		<textcube>1.7</textcube>
	</requirements>
	<binding>
		<formatter id="ttml" name="TTML">
			<format>FM_TTML_format</format>
			<summary>FM_TTML_summary</summary>
			<usedFor editor="modern" />
			<usedFor editor="xquared" />
		</formatter>
	</binding>
</plugin>
